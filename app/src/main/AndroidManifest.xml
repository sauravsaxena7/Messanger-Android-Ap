<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jlcsoftware.bloodbankcommunity">

    <application
        android:name=".BloodBankOfflineCapabilities"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity android:name=".ChatActivity"
             />


        <activity android:name=".UserHandle.SplashBloodBank">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserDetails.User_Details" />
        <activity android:name=".UserHandle.Register"
            />
        <activity
            android:name=".UserHandle.Login"
            />

        <activity android:name=".UserHandle.VerifyPhone" />
        <activity android:name=".MainActivity" />
    </application>

    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>