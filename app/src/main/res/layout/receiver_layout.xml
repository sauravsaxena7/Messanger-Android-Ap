<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/messageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chat_user_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/teamwork_symbol"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="0dp"
            android:layout_marginStart="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"

            >

            <LinearLayout
                android:id="@+id/message_text"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/receiver_layout_design"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/opensansregular"
                    android:text="Hello Amit Anand, How are you?"
                    android:textColor="#fff" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/message_img"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/receiver_message_image_view_bg"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/receiver_message_img"
                    android:layout_width="270dp"
                    android:layout_height="260dp"
                    android:scaleType="centerCrop"
                    android:padding="13dp"
                    android:src="@drawable/teamwork_symbol"
                    />

            </LinearLayout>


        </LinearLayout>







    </LinearLayout>


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageLayout"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/opensansregular"
        android:text="10:25 PM"
        android:textColor="#fff"
        android:textSize="12sp" />

</RelativeLayout>